<UserControl x:Class="WpfExampleWindow.ExampleForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfExampleWindow"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}">
    <ScrollViewer HorizontalScrollBarVisibility="Auto">
        <Grid RenderTransformOrigin="0.076,0.244">
            <Label Name="WindowHostTitle" Content="WPF Example Form" Visibility="Hidden"/>
            <Label Content="This is a WPF window." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"/>
            <Button Content="Button" HorizontalAlignment="Left" Margin="17,40,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.561,0.56" Click="Button_Click"/>
        </Grid>
    </ScrollViewer>
</UserControl>
